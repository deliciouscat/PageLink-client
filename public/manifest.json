{
    "manifest_version": 3,
    "name": "PageLink - 북마크 매니저",
    "version": "1.0.0",
    "description": "북마크를 관리하고 마크다운 메모를 작성할 수 있는 크롬 사이드바 익스텐션",
    "icons": {
        "16": "assets/icon-16.png",
        "48": "assets/icon-48.png",
        "128": "assets/icon-128.png"
    },
    "side_panel": {
        "default_path": "index.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "PageLink 열기"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Alt+L"
            },
            "description": "PageLink 사이드 패널 토글"
        },
        "smart-add": {
            "suggested_key": {
                "default": "Alt+D"
            },
            "description": "현재 페이지 스마트 추가"
        },
        "collection-1": {
            "suggested_key": {
                "default": "Alt+1"
            },
            "description": "컬렉션 1로 이동/저장"
        },
        "collection-2": {
            "suggested_key": {
                "default": "Alt+2"
            },
            "description": "컬렉션 2로 이동/저장"
        }
    },
    "permissions": [
        "sidePanel",
        "tabs",
        "bookmarks",
        "storage",
        "activeTab",
        "contextMenus",
        "scripting"
    ],
    "host_permissions": [
        "https://openrouter.ai/*"
    ]
}